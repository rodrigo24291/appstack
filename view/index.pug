        title Document
    body 
        header.barra 
            h1.barra Up-stack
            a(href="/cerrarsesion") cerrar session
        main.contenedor
            aside.contenedor-proyectos
                .panel.crear-proyecto
                    a(href="/nuevo-proyecto" class="boton") Nuevo 
                        span +
                .panel.lista-proyectos
                    ul#proyectos.proyectos
                        if(proyecta.length)
                            each proye in proyecta
                                li 
                                     a(href=`/proyecto/${proye.url}`)=proye.nombre
                        
            block contenido

            

        script(src="index.js") 